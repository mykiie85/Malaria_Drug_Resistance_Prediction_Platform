# Malaria Drug Resistance Platform - Frontend Environment Variables
# Copy this file to .env.local and update values as needed

# API Configuration
# Development: http://localhost:8000
# Docker: http://backend:8000
# Production: https://your-api-domain.com
VITE_API_URL=http://localhost:8000

# Feature Flags (optional)
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG_PANEL=false

# Map Configuration (optional)
VITE_MAP_DEFAULT_CENTER_LAT=0
VITE_MAP_DEFAULT_CENTER_LNG=20
VITE_MAP_DEFAULT_ZOOM=3
